                                BorderThickness="0"    
                                IsEnabled="{Binding WorktaskPageEnabled}"
                                Click="newProjectButton_Click">
                            <Image Source="/Icons/add.png" Height="55" Width="55" Margin="-20,0,0,0"/>
                        </Button>
                    </Grid>
